<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="saleorder-product-line-grid" title="Product Line" editable="true"
    model="com.axelor.apps.sale.db.SaleorderProductLine">
    <field name="product" required="true" domain="self.productTypeSelect = 'storable'"/>
    <field name="buyPrice"/>
    <field name="salePrice" onChange="action-attrs-sale-order-product-line-total-price"/>
    <field name="piece" onChange="action-attrs-sale-order-product-line-total-price"/>
    <field name="totalPrice"/>
    <field name="description"/>
  </grid>

  <form name="saleorder-product-line-form" title="Product Line"
    model="com.axelor.apps.sale.db.SaleorderProductLine">
    <panel name="mailPanel">
      <field name="product" required="true" domain="self.productTypeSelect = 'storable'"/>
      <field name="buyPrice"/>
      <field name="salePrice" onChange="action-attrs-sale-order-product-line-total-price"/>
      <field name="piece" onChange="action-attrs-sale-order-product-line-total-price"/>
      <field name="totalPrice" readonly="true"/>
      <field name="description"/>
    </panel>
  </form>

  <grid name="saleorder-product-equipment-line-grid" title="Equipment Line" editable="true"
    model="com.axelor.apps.sale.db.SaleorderProductLine">
    <field name="product" required="true" domain="self.productTypeSelect = 'equipment'"
      onChange="action-attrs-sale-order-product-line-set-lifespan"/>
    <field name="lifespan" readonly="true"/>
    <field name="buyPrice"/>
    <field name="salePrice" title="Rent Price"
      onChange="action-attrs-sale-order-product-line-total-price"/>
    <field name="piece" onChange="action-attrs-sale-order-product-line-total-price"/>
    <field name="totalPrice"/>
    <field name="description"/>
  </grid>

  <form name="saleorder-product-equipment-line-form" title="Equipment Line"
    model="com.axelor.apps.sale.db.SaleorderProductLine">
    <panel name="mailPanel">
      <field name="product" required="true" domain="self.productTypeSelect = 'equipment'"
        onChange="action-attrs-sale-order-product-line-set-lifespan"/>
      <field name="buyPrice"/>
      <field name="salePrice" onChange="action-attrs-sale-order-product-line-total-price"
        title="Rent Price"/>
      <field name="piece" onChange="action-attrs-sale-order-product-line-total-price"/>
      <field name="totalPrice" readonly="true"/>
      <field name="lifespan" readonly="true"/>
      <field name="description"/>
    </panel>
  </form>

  <action-attrs name="action-attrs-sale-order-product-line-total-price">
    <attribute for="totalPrice" name="value" expr="eval: salePrice * piece"/>
  </action-attrs>

  <action-attrs name="action-attrs-sale-order-product-line-set-lifespan">
    <attribute for="lifespan" name="value" expr="eval: product?.lifespanTime"/>
  </action-attrs>

</object-views>
