<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">


  <!-- Nomenclature : * name : "interfaceName" + "fieldName" + ".select" -->

  <selection name="purchase.purchase.order.status.select">
    <option value="1">Draft</option>
    <option value="2">Requested</option>
    <option value="3">Validated</option>
    <option value="4">Finished</option>
    <option value="5">Canceled</option>
  </selection>

  <selection name="purchase.order.receipt.state">
    <option value="1">Not received</option>
    <option value="2">Partially received</option>
    <option value="3">Received</option>
  </selection>

  <selection name="purchase.request.status.select">
    <option value="1">Draft</option>
    <option value="2">Requested</option>
    <option value="3">Accepted</option>
    <option value="4">Purchased</option>
    <option value="5">Refused</option>
    <option value="6">Canceled</option>
  </selection>

  <selection name="purchase.request.status.ru.select">
    <option value="1">Request and Approve</option>
    <option value="2">Price Search</option>
    <option value="3">Approved</option>
    <!-- <option value="3">Accepted and Order</option> <option value="4">Order Confirm</option> <option
      value="5">Payment Process</option> <option value="6">Paid</option> <option value="7">Arrived</option>
      <option value="8">Refused</option> -->
    <option value="4">Canceled</option>
  </selection>

  <selection name="base.blocking.select" id="purchase.blocking.select">
    <option value="6">Purchase blocking</option>
  </selection>

  <selection name="sequence.generic.code.select"
    id="purchase.sequence.generic.code.select">
    <option value="purchaseOrder">Purchase order</option>
    <option value="PurchaseRequest">Purchase request</option>
    <option value="purchaseRequestRu">Purchase request Ru</option>
  </selection>

  <selection name="abc.analysis.type.select" id="purchase.abc.analysis.type.select">
    <option value="com.axelor.apps.purchase.service.ABCAnalysisServicePurchaseImpl">Purchase</option>
  </selection>

  <selection name="purchase.payment.method.ru.select">
    <option value="1">Bank</option>
    <option value="2">Cash</option>
  </selection>

  <selection name="purchase.request.line.status.ru.select">
    <option value="1">Order Product</option>
    <option value="2">Registered Payment</option>
  </selection>

  <selection name="purchase.request.image.selecion.ru.select">
    <option value="1">With Image</option>
    <option value="2">Without Image</option>
  </selection>
</object-views>
