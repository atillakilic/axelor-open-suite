<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">

  <module name="purchase" package="com.axelor.apps.purchase.db"/>

  <entity name="PurchaseRequestLine" lang="java">
    <many-to-one name="product" ref="com.axelor.apps.base.db.Product" title="Product"/>
    <boolean name="newProduct" title="New product"/>
    <many-to-one name="unit" ref="com.axelor.apps.base.db.Unit" title="Unit"/>
    <decimal name="quantity" title="Quantity" precision="20" scale="10" min="0"/>
    <string name="productTitle" title="Product"/>
    <many-to-one name="purchaseRequest"
      ref="com.axelor.apps.purchase.db.PurchaseRequest" title="Purchase request"/>

    <many-to-one name="productCategory" ref="com.axelor.apps.base.db.ProductCategory"
      title="Product category"/>
    <decimal name="unitPrice" title="Unit Price"/>
    <decimal name="deliveryCost" title="Delivery Cost"/>
    <decimal name="totalCost" title="Total Cost"/>
    <integer name="deliveryTime" title="Delivery Time (Day)"/>
    <string name="supplier" title="Supplier"/>
    <many-to-one name="supplierPartner" title="Supplier"
      ref="com.axelor.apps.base.db.Partner"/>
    <string name="url" title="URL"/>
    <string name="description" title="Note/Description" large="true"/>

  </entity>

</domain-models>