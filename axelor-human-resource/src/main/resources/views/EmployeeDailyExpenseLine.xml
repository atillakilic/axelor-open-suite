<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">

  <grid name="hr-employee-expense-line-grid" title="Expense Line" editable="true"
    model="com.axelor.apps.hr.db.EmployeeDailyExpenseLine">
    <field name="expenseType"/>
    <field name="paymentMethod"/>
    <field name="total"/>
    <field name="comments"/>
  </grid>

  <form name="hr-employee-expense-line-form" title="Expense Line"
    model="com.axelor.apps.hr.db.EmployeeDailyExpenseLine" width="mid">
    <panel name="mainPanel" showTitle="false" title="Main Panel">
      <field name="expenseType" form-view="hr-employee-expense-type-form"
        grid-view="hr-employee-expense-type-grid"/>
      <field name="paymentMethod" required="true"/>
      <field name="total"/>
      <field name="comments"/>
    </panel>
  </form>


</object-views>