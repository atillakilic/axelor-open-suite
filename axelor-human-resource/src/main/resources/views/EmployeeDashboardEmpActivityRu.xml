<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">

  <grid name="hr-employee-dashboard-employee-activity-ru-grid" title="Employee Activity"
    model="com.axelor.apps.hr.db.EmployeeDashboardEmpActivityRu">
    <field name="employee"/>
    <field name="totalDaysWorked"/>
    <field name="totalDaysNotWorked"/>
    <field name="totalWorkHours"/>
  </grid>

  <form name="hr-employee-dashboard-employee-activity-ru-form" title="Employee Activity"
    model="com.axelor.apps.hr.db.EmployeeDashboardEmpActivityRu" width="large">
    <panel name="mainPanel" showTitle="false" title="Main Panel">
      <field name="employee"/>
      <field name="totalDaysWorked"/>
      <field name="totalDaysNotWorked"/>
      <field name="totalWorkHours"/>
    </panel>
  </form>

</object-views>