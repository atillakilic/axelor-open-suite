<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">

  <grid name="hr-employee-salary-grid" title="Salary"
    model="com.axelor.apps.hr.db.EmployeeSalary">
    <field name="statusSelect"/>
    <field name="creationDate" title="Creation Date"/>
    <field name="selectActivityType"/>
  </grid>

  <form name="hr-employee-salary-form" title="Salary"
    model="com.axelor.apps.hr.db.EmployeeSalary" width="large">
    <panel name="mainPanel" showTitle="false" title="Main Panel">
      <field name="statusSelect" widget="NavSelect" colSpan="12" showTitle="false"
        readonly="true"/>
      <field name="creationDate" title="Creation Date" colSpan="4"/>
      <field name="selectActivityType" colSpan="4" hidden="true"
        onChange="action-emp-salary-attrs-set-employee-team,save"/>
    </panel>

    <panel-related field="employeeSalaryRecord"
      form-view="hr-employee-salary-line-form" grid-view="hr-employee-salary-line-grid"
      canEdit="true"/>

    <panel sidebar="true" name="panelSideBar" showIf="statusSelect == 1">
      <button onClick="save,action-emp-salary-attrs-set-status,save" name="sendVerfiyBtn"
        title="Send to Finance" prompt="Are you sure you want to send to Finance?"/>
    </panel>

  </form>


  <form name="hr-employee-salary-finance-form" title="Salary"
    model="com.axelor.apps.hr.db.EmployeeSalary" width="large">
    <panel name="mainPanel" showTitle="false" title="Main Panel">
      <field name="statusSelect" widget="NavSelect" colSpan="12" showTitle="false"
        readonly="true"/>
      <field name="company" colSpan="4"/>
      <spacer colSpan="8"/>
      <field name="creationDate" title="Creation Date" colSpan="4"/>
      <field name="selectActivityType" colSpan="4" hidden="true"
        onChange="action-emp-salary-attrs-set-employee-team,save"/>

    </panel>

    <panel name="panelAccountActivity" showIf="statusSelect > 1">
      <field name="paymentMethod" colSpan="4"/>
    </panel>

    <panel-related field="employeeSalaryRecord"
      form-view="hr-employee-salary-line-form" grid-view="hr-employee-salary-line-grid"
      canEdit="true"/>

    <panel sidebar="true" name="panelSideBar" showIf="statusSelect == 1">
      <button onClick="save,action-emp-salary-attrs-set-status,save" name="sendVerfiyBtn"
        title="Send to Finance" prompt="Are you sure you want to send to Finance?"/>
    </panel>

    <panel sidebar="true" name="panelSideBar" showIf="statusSelect > 1">
      <button onClick="save" name="payBtn" title="Pay" css="btn-success"
        prompt="Are you sure you want to Pay Salary?"/>
      <button onClick="save" name="payPlanBtn" title="Pay Plan" css="btn-primary"
        prompt="Are you sure you want to Pay Plan Salary?"/>
      <button onClick="save" name="rejectBtn" title="Reject" css="btn-danger"
        prompt="Are you sure you want to Reject Salary?"/>
      <button onClick="save,action-employee-salary-method-print-report" name="printBtn" title="Print" css="btn-success"/>
    </panel>

  </form>

  <action-attrs name="action-emp-salary-attrs-set-employee-team">
    <attribute name="value" for="employerTeam" if="selectActivityType != 1"
      expr="eval: null"/>
  </action-attrs>

  <action-attrs name="action-emp-salary-attrs-set-status">
    <attribute name="value" for="statusSelect" expr="eval: 2"/>
  </action-attrs>

  <action-method name="action-employee-salary-method-print-report">
  	<call class="com.axelor.apps.hr.web.EmployeeSalaryController" method="printEmployeeSalaryReport"/>
  </action-method>

</object-views>