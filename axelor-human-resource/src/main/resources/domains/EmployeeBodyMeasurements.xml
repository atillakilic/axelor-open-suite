<?xml version="1.0" ?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">

  <module name="human-resource" package="com.axelor.apps.hr.db"/>

  <entity name="EmployeeBodyMeasurements" cacheable="true">

    <string name="shoesSize" title="Shoes size"/>
    <string name="pantsSize" title="Pants size"/>
    <string name="coatSize" title="Coat Size"/>
    <string name="height" title="Height"/>
    <string name="weight" title="Weight"/>
    <string name="bodyType" title="Body Type" selection="hr.employee.body.type"/>
    <string name="descriptons" title="Descriptons"/>

    <many-to-one name="employeeHr" ref="com.axelor.apps.hr.db.EmployeeHr"
      title="Employee"/>

  </entity>

</domain-models>

