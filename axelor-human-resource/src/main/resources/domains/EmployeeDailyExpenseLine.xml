<?xml version="1.0" ?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">

  <module name="human-resource" package="com.axelor.apps.hr.db"/>

  <entity name="EmployeeDailyExpenseLine" cacheable="true">

    <many-to-one name="expenseType" ref="com.axelor.apps.hr.db.EmployeeDailyExpenseType"
      title="Expense Type"/>
    <integer name="paymentMethod" title="Payment Method"
      selection="hr.employee.salary.payment.method"/>
    <decimal name="total" type="Total"/>
    <string name="comments" title="Comments"/>

    <many-to-one name="employeeExpense" ref="com.axelor.apps.hr.db.EmployeeDailyExpense"/>
  </entity>

</domain-models>

