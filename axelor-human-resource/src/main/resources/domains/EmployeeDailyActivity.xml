<?xml version="1.0" ?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">

  <module name="human-resource" package="com.axelor.apps.hr.db"/>

  <entity name="EmployeeDailyActivity" cacheable="true">

    <integer name="statusSelect" title="ActivityStatus"
      selection="hr.employee.daily.activity"/>
    <integer name="selectActivityType" title="Work Type" default="1"
      selection="hr.employee.activity.type"/>
    <many-to-one name="company" ref="com.axelor.apps.base.db.Company" title="Company"/>
    <date name="startDate" title="Start Date"/>
    <date name="toDate" title="To Date"/>
    <many-to-one name="activityUser" ref="com.axelor.auth.db.User" title="User"/>
    <many-to-one name="project" ref="com.axelor.apps.project.db.Project" title="Project"/>
    <integer name="statusShiftType" title="Shift"
      selection="hr.employee.daily.activity.shift.selection"/>
    <string name="description" title="Description"/>

    <many-to-one name="employerTeam" title="Employer Team"
      ref="com.axelor.apps.hr.db.EmployerTeam"/>

    <one-to-many name="activityRecord"
      ref="com.axelor.apps.hr.db.EmployeeDailyActivityLine" mappedBy="employeeDailyActivity"
      title="Activity Record"/>

    <one-to-many name="dailyActivityRecord"
      ref="com.axelor.apps.hr.db.EmployeeDailyActivityNewLine" mappedBy="employeeDailyActivity"
      title="Activity Record"/>


  </entity>

</domain-models>

