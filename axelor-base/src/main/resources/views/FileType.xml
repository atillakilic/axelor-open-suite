<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="file-type-grid" title="File types" model="com.axelor.apps.base.db.FileType">
    <field name="code"/>
    <field name="name"/>
    <field name="hasExpirationDate"/>
  </grid>

  <form name="file-type-form" title="File type" model="com.axelor.apps.base.db.FileType">
    <panel name="mainPanel">
      <field name="code" colSpan="3"/>
      <field name="name" colSpan="3"/>
      <field name="hasExpirationDate" colSpan="3"/>
      <field name="preparationTime" colSpan="3"/>
      <field name="criticalTime" colSpan="3"/>
      <field name="remainingDays" colSpan="3"/>
      <field name="price" colSpan="3"/>
    </panel>
    <panel-related name="empFilePriseListPanel" field="empFilePriseList"
      onChange="action-file-type-method-set-document-price,save"
      form-view="employee-file-prise-list-form" grid-view="employee-file-prise-list-grid"
      colSpan="12"/>
  </form>

  <action-method name="action-file-type-method-set-document-price">
    <call class="com.axelor.apps.base.web.FileTypeController" method="setDocumentPrice"/>
  </action-method>
</object-views>
